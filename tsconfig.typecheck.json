{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,

    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "types": ["vite/client"],

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"],
  "exclude": ["node_modules", "dist", "**/*.d.ts"]
}
